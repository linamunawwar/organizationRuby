<!DOCTYPE html>
<html>
  <head>
    <title>OrganizationRuby</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    <%= form_tag(organizations_search_path, :method => "get") do %>
      <div class="input-group">
        <%= search_field_tag :search, params[:search], placeholder: "Type ", class: "form_control" %>
        <div class="input-group-btn">
          <%= button_tag " Search for Organization", class: "btn btn-info glyphicon glyphicon-search", :name => nil%>
        </div>
      </div>
    <% end %>
  </div>
    <%= yield %>
  </body>
</html>
