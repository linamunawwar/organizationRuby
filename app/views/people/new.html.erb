<div class="container p-3 my-3 border">
	<h1>New Person</h1>

	<%= form_with(model: @person, url: organization_people_path, html: { multipart: true }) do |form| %>
	  <% if @person.errors.any? %>
	    <div id="error_explanation">
	      <h2><%= pluralize(@person.errors.count, "error") %> prohibited this person from being saved:</h2>

	      <ul>
	        <% @person.errors.each do |error| %>
	          <li><%= error.full_message %></li>
	        <% end %>
	      </ul>
	    </div>
	  <% end %>

	  <%= form.hidden_field(:organization_id, :value => params[:organization_id]) %>

	  <div class="field form-group">
	    <%= form.label :name %>
	    <%= form.text_field :name,class: "form-control" %>
	  </div>

	  <div class="field form-group">
	    <%= form.label :phone %>
	    <%= form.text_field :phone, class: "form-control" %>
	  </div>

	  <div class="field form-group">
	    <%= form.label :email %>
	    <%= form.text_field :email, class: "form-control" %>
	  </div>

	  <div class="field form-group">
	    <%= form.label :avatar %>
	    <%= form.file_field :avatar, class: "form-control" %>
	  </div>

	  <div class="actions">
	    <%= form.submit %>
	  </div>
	<% end %>


	<%= link_to 'Back', organization_path(params[:organization_id]) %>
